<h1>Listing fridges</h1>

<table>
  <tr>
    <th>Producer</th>
    <th>Product</th>
    <th>Brand</th>
    <th>Model</th>
    <th>Efficiency</th>
    <th>Consume</th>
    <th>Height</th>
    <th>Width</th>
    <th>Deep</th>
    <th>Froost</th>
  </tr>

<% @fridges.each do |fridge| %>
  <tr>
    <td><%=h fridge.producer %></td>
    <td><%=h fridge.product %></td>
    <td><%=h fridge.brand %></td>
    <td><%=h fridge.model %></td>
    <td><%=h fridge.efficiency %></td>
    <td><%=h fridge.consume %></td>
    <td><%=h fridge.height %></td>
    <td><%=h fridge.width %></td>
    <td><%=h fridge.deep %></td>
    <td><%=h fridge.froost %></td>
    <td><%= link_to 'Show', fridge %></td>
    <td><%= link_to 'Edit', edit_fridge_path(fridge) %></td>
    <td><%= link_to 'Destroy', fridge, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fridge', new_fridge_path %>