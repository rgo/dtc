<h1 id="slogan"><%= t('washer_dryers.index.h1') %></h1>

<div id="intro">
  <% form_for @search, :html => {:id => "washer_dryer_search", :class => "top_form"} do |f| %>
    <p class="select_field">
      <%= f.label WasherDryer.human_attribute_name(:efficiency) %>
      <%= f.collection_select :efficiency_eq, WasherDryer.efficiency_options, :efficiency, :efficiency, {:include_blank => t('general.prompt')}, {:size => 5} %>
    </p>
    <p class="select_field">
      <%= f.label WasherDryer.human_attribute_name(:consume) %>
      <%= f.select :consume_range_is, consume_range_options_for_washer_dryer, {:include_blank => t('general.prompt')}, {:size => 5} %>
    </p>
    <p class="select_field">
      <%= f.label WasherDryer.human_attribute_name(:rpm) %>
      <%= f.collection_select :rpm_eq, WasherDryer.rpm_options,:rpm, :rpm, {:include_blank => t('general.prompt')}, {:size => 5} %>
    </p>
    <p class="select_field">
      <%= f.label WasherDryer.human_attribute_name(:washing_capacity) %>
      <%= f.collection_select :washing_capacity_eq, WasherDryer.washing_capacity_options, :washing_capacity, :washing_capacity, {:include_blank => t('general.prompt')}, {:size => 5} %>
    </p>
    <p class="select_field">
      <%= submit_tag t('washer_dryers.search_button'), :class => "submit huge grana awesome"%>
    </p>
  <% end %>
</div>

<h3><%= t('.h3_results') %></h3>

<table>
  <summary>Resultados de la b√∫squeda</summary>
  <theader>
  <tr>
    <th><%= order @search, :by => :brand, :as => Dishwasher.human_attribute_name(:brand) %></th>
    <th><%= order @search, :by => :model, :as => Dishwasher.human_attribute_name(:model) %></th>
    <th><%= order @search, :by => :rpm, :as => Dishwasher.human_attribute_name(:rpm) %></th>
    <th><%= order @search, :by => :efficiency, :as => Dishwasher.human_attribute_name(:efficiency) %></th>
    <th><%= order @search, :by => :consume, :as => Dishwasher.human_attribute_name(:consume) %></th>
    <th><%= order @search, :by => :washing_consume, :as => Dishwasher.human_attribute_name(:washing_consume) %></th>
    <th><%= order @search, :by => :washing_efficiency, :as => Dishwasher.human_attribute_name(:washing_efficiency) %></th>
    <th><%= order @search, :by => :washing_capacity, :as => Dishwasher.human_attribute_name(:washing_capacity) %></th>
    <th><%= order @search, :by => :drying_capacity, :as => Dishwasher.human_attribute_name(:drying_capacity) %></th>
    <th><%= order @search, :by => :consume_kg, :as => Dishwasher.human_attribute_name(:consume_kg) %></th>
    <th><%= order @search, :by => :water_consume, :as => Dishwasher.human_attribute_name(:water_consume) %></th>
    <th><%= order @search, :by => :height, :as => Dishwasher.human_attribute_name(:height) %></th>
    <th><%= order @search, :by => :width, :as => Dishwasher.human_attribute_name(:width) %></th>
    <th><%= order @search, :by => :deep, :as => Dishwasher.human_attribute_name(:deep) %></th>
  </tr>
  </theader>

  <tbody>
    <% @washer_dryers.each do |washer_dryer| %>
      <tr class="<%= cycle("even", "odd", :name => "row_class") %>">
