<h1 id="slogan">Encuentra electrodomésticos energéticamente eficientes y ahorra dinero</h1>

<div id="intro">
  <h2>Busca un electrodoméstico (lavadora, frigorífico, lavavajillas...)</h2>
	<% form_tag search_appliances_path, :id => 'main_search', :class => "top_form" do %>
      <p>
	  <%= text_field_tag 'q', '',  :class => 'text shadow', :tabindex => 1 %>
	  <%= submit_tag 'Buscar', :class => "submit large grana awesome", :tabindex => 2 %>
      </p>
	<% end %>		
</div>

<% APPLIANCES_CLASSES.each do |appliance_class| %>

    <% first = cycle("first", "") %>

    <div class="col2 <%= first %>">

      <h2><%= link_to appliance_class.human_name, appliance_class, :title => t('general.search', :item => appliance_class.human_name) %></h2>
      <ul>
        <% logger.info appliance_class %>
        <% if appliance_class.best.any? %>
            <% appliance_class.best.each do |appliance_instance| %>
                <li><%= link_to appliance_instance.appliance_title, appliance_instance %></li>
            <% end -%>
        <% else %>
            <li><%= "No hemos recuperado ningún #{appliance_class.human_name}" %></li>
        <% end -%>
      </ul>
    </div>
<% end -%>

